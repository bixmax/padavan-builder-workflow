# ===== БАЗОВЫЕ НАСТРОЙКИ =====
CONFIG_VENDOR=XIAOMI
CONFIG_PRODUCT=MT7628
CONFIG_FIRMWARE_PRODUCT_ID="MI-NANO"

# ===== ОТКЛЮЧЕНО (лишнее для 100 Мбит) =====
#CONFIG_FIRMWARE_INCLUDE_XUPNPD=y       # UPnP медиасервер (не нужно)
#CONFIG_FIRMWARE_INCLUDE_CIFS=y         # Сетевые диски (не нужно)
#CONFIG_FIRMWARE_INCLUDE_OPENSSH=y      # OpenSSH (тяжелый)
#CONFIG_FIRMWARE_INCLUDE_SFTP=y         # SFTP (не нужно)
#CONFIG_FIRMWARE_INCLUDE_TCPDUMP=y      # Анализ трафика (не нужно)
#CONFIG_FIRMWARE_INCLUDE_LUA=y          # Lua (не нужно)

# ===== ВКЛЮЧЕНО (обход блокировок) =====
# 1. DNS-фильтрация (блокировка рекламы + обход цензуры)
CONFIG_FIRMWARE_INCLUDE_DNSCRYPT=y     # DNSCrypt (обфускация DNS)
CONFIG_FIRMWARE_INCLUDE_DOH=y          # DNS-over-HTTPS (Cloudflare)
CONFIG_FIRMWARE_INCLUDE_ADGUARD=y      # Блокировка рекламы (AdGuard Home)

# 2. VPN и прокси (обход DPI)
CONFIG_FIRMWARE_INCLUDE_WIREGUARD=y    # WireGuard (быстрый, маскировка под HTTPS)
CONFIG_FIRMWARE_INCLUDE_SHADOWSOCKS=y  # Shadowsocks (резервный метод)
CONFIG_FIRMWARE_INCLUDE_SIMPLE_OBFS=y  # Obfs (маскировка трафика)

# 3. Анти-цензура (обход блокировок РКН)
CONFIG_FIRMWARE_INCLUDE_IPTABLES_BADSEQ=y  # Ломает DPI-анализ
CONFIG_FIRMWARE_INCLUDE_NFQWS=y            # Обход блокировок по TLS

# ===== ОПТИМИЗАЦИЯ =====
CONFIG_FIRMWARE_INCLUDE_IPSET=y        # Нужно для блокировки рекламы
CONFIG_FIRMWARE_INCLUDE_ZRAM=y         # Сжатие памяти (для MT7628)
CONFIG_CC_OPTIMIZE_FOR_SIZE=y          # Минимизация размера прошивки
