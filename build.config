# ===== БАЗОВЫЕ НАСТРОЙКИ =====
CONFIG_VENDOR=XIAOMI
CONFIG_PRODUCT=MT7628
CONFIG_FIRMWARE_PRODUCT_ID="MI-NANO"

# ===== ОТКЛЮЧЕНО (лишнее) =====
#CONFIG_FIRMWARE_INCLUDE_XUPNPD=y       # UPnP (не нужно)
#CONFIG_FIRMWARE_INCLUDE_CIFS=y         # Сетевые диски (не нужно)
#CONFIG_FIRMWARE_INCLUDE_OPENSSH=y      # Тяжелый для MT7628
#CONFIG_FIRMWARE_INCLUDE_TCPDUMP=y      # Анализ трафика (не нужно)

# ===== ЯДРО ОБХОДА БЛОКИРОВОК =====
# 1. DNS-защита (обход блокировок + реклама)
CONFIG_FIRMWARE_INCLUDE_DOT=y           # DNS-over-TLS (Cloudflare/AdGuard)
CONFIG_FIRMWARE_INCLUDE_DOH=y           # DNS-over-HTTPS (резерв)
CONFIG_FIRMWARE_INCLUDE_ADGUARD=y       # Блокировка рекламы
CONFIG_FIRMWARE_INCLUDE_DNSCRYPT=y      # Обфускация DNS (анти-цензура)

# 2. Анти-DPI
CONFIG_FIRMWARE_INCLUDE_ZAPRET=y        # Обход блокировок РКН (аналог GoodbyeDPI)
CONFIG_FIRMWARE_INCLUDE_NFQWS=y         # Маскировка трафика под YouTube
CONFIG_FIRMWARE_INCLUDE_IPTABLES_BADSEQ=y  # Ломает анализ DPI

# 3. VPN (маскировка под обычный трафик)
#CONFIG_FIRMWARE_INCLUDE_WIREGUARD=y     # Лучший вариант для MT7628
#CONFIG_FIRMWARE_INCLUDE_SHADOWSOCKS=y   # Резерв
#CONFIG_FIRMWARE_INCLUDE_SIMPLE_OBFS=y   # Маскировка SS-трафика

# ===== ОПТИМИЗАЦИЯ =====
CONFIG_FIRMWARE_INCLUDE_IPSET=y         # Нужно для AdGuard/Zapret
CONFIG_FIRMWARE_INCLUDE_ZRAM=y          # Сжатие памяти
CONFIG_CC_OPTIMIZE_FOR_SIZE=y           # Минимальный размер прошивки
